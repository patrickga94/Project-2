{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/characters" method="POST">
        <fieldset>
            <legend>Create New Character</legend>
            <label class="form-label">Name: </label>
            <input 
                type="text" 
                name="name" 
                placeholder="enter character name"
                class="form-control mb-3"
                required
            >
            <label class="form-label">Class:</label>
            <select class="form-select mb-3" aria-label="Default select example" name="class" required>
                <option value="1">Bard</option>
                <option value="2">Cleric</option>
                <option value="3">Druid</option>
                <option value="4">Palladin</option>
                <option value="5">Ranger</option>
                <option value="6">Sorceror</option>
                <option value="7">Warlock</option>
                <option value="8">Wizard</option>
              </select>
            <label class="form-label">Level:</label>
            <input 
                type="number" 
                name="level" 
                class="form-control mb-3"
                value="1"
                min="1"
                required
            >
        </fieldset>
        <input type="submit" value="Create New Character" class="btn btn-success">
    </form>
</div>
{% endblock %}