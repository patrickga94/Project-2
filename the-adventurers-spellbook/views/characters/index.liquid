{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Characters</h2>
    <div class="row">
        {% for character in characters %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ character.name }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Class: {{ character.class }}
                </h5>
                <p class="card-text">
                    Level: {{ character.level }}
                </p>
                <!-- <p class="card-text">
                    Amount: {{ example.amount }}
                </p> -->
                <a href="/characters/{{ character.id }}" class="btn btn-info">
                    View {{ character.name }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}