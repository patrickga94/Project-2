{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ character.name }} -
        </h2>
        <h3>Class: {{ character.class }}</h3>
        <h6>Level: {{ character.level }}</h6>
        <a href="/spells/{{character.id}}">View Class Spells</a>
        {% if character.owner == userId %}
        <div class="btn-group">

            <a href="/characters/{{ character.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/characters/{{ character.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}