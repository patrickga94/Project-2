{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ character.name }} -
        </h2>
        <h3>Class: {{ character.class }}</h3>
        <h6>Level: {{ character.level }}</h6>
        <a href="/spells/{{character.id}}/mine">Show my spells</a>

        {%if character.spells.length > 0%}
        <div>
            <h4>
                My Spells:
            </h4>
                {%for spell in character.spells%}
                    {%render '../spell.liquid', spell: spell, userId: userId%}
                {%endfor%}
        </div>
        {%endif%}
        <a href="/spells/{{character.id}}">View Class Spells</a>
        {% if character.owner == userId %}
        <div class="btn-group">

            <a href="/characters/{{ character.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/characters/{{ character.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}