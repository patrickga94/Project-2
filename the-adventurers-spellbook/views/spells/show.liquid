{% layout 'layout.liquid' %}
{% block content %}
    <h1>{{spell.name}}</h1>
    <p>Range: {{spell.range}}, Components: {{spell.components}}, {%if spell.material.length > 0%} Materials: {{spell.material}} {%endif%}</p>
    <p>Level: {{spell.level}}, Casting Time: {{spell.casting_time}}, Concentration: {%if spell.concentration%} Yes {%else%} No {%endif%}</p>
    <p>{{spell.desc}}</p>
    {%if spell.higher_level.length > 0%}
    <p>At higher levels: {{spell.higher_level}}</p>
    {%endif%}
    {%if spell.index%}
    <form action="/spells/{{character.id}}/{{spell.index}}/add" method="POST">
        <input type="submit" value="Add to Spellbook" class="btn btn-success" >
    </form>
    {%endif%}
    <!-- <a href="/spells/{{characterId}}/{{}}"></a> -->
    {% if spell.owner == userId %}
    <form action="/spells/{{character.id}}/{{spell.id}}/add" method="POST">
        <input type="submit" value="Add to Spellbook" class="btn btn-success">
    </form>
    <div class="btn-group">
        <a href="/spells/{{character.id}}/{{spell.id}}/edit" class="btn btn-primary">Edit</a>
        <form action="/spells/{{ characterId }}/{{spell.id}}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
    </div>
    {% endif %}
    <a href="/spells/{{character.id}}">Back to spells</a>
    <a href="/characters/{{character.id}}">Back to {{character.name}}</a>
{%endblock%}